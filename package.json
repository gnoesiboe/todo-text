{
    "scripts": {
        "dev:build:watch": "react-scripts start",
        "dev:format": "prettier --write \"src/**/*.{ts,tsx,json,md,css}\"",
        "dev:test": "react-scripts test",
        "dev:eject": "react-scripts test",
        "dev:pre-commit": "npm run typescript:validate && lint-staged",
        "dev:lint:js": "eslint --ext .ts,.tsx ./src",
        "dev:lint:js:fix": "npm run dev:lint:js -- --fix",
        "prod:build": "react-scripts build",
        "typescript:validate": "tsc --noEmit",
        "typescript:validate:watch": "tsc --noEmit --watch"
    },
    "dependencies": {
        "@primer/octicons-react": "^11.3.0",
        "ace-builds": "^1.4.12",
        "bootstrap": "^4.6.0",
        "classnames": "^2.3.1",
        "date-fns": "^2.21.3",
        "firebase": "^8.6.2",
        "highlight.js": "^10.7.2",
        "immer": "^8.0.4",
        "joi": "^17.4.0",
        "lodash": "^4.17.21",
        "markdown-it": "^12.0.6",
        "markdown-it-task-checkbox": "^1.0.6",
        "normalize.css": "^8.0.1",
        "object-to-formdata": "^4.1.0",
        "query-string": "^6.14.1",
        "react": "^17.0.2",
        "react-ace": "^9.4.0",
        "react-animate-auto-height": "^0.3.0",
        "react-autosize-textarea": "^7.1.0",
        "react-bootstrap": "^1.6.0",
        "react-dnd": "^11.1.3",
        "react-dnd-html5-backend": "^11.1.3",
        "react-dnd-multi-backend": "^6.0.2",
        "react-dnd-touch-backend": "^11.1.3",
        "react-dom": "^17.0.2",
        "react-firebase-hooks": "^3.0.4",
        "react-outside-click-handler": "^1.3.0",
        "react-scripts": "^4.0.3",
        "react-toastify": "^6.2.0",
        "styled-components": "^5.3.0",
        "suggest-box": "^2.2.3",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "@types/classnames": "^2.3.1",
        "@types/lodash": "^4.14.170",
        "@types/markdown-it": "^12.0.1",
        "@types/react": "^17.0.6",
        "@types/react-dnd-multi-backend": "^6.0.0",
        "@types/react-dom": "^17.0.5",
        "@types/react-outside-click-handler": "^1.3.0",
        "@types/styled-components": "^5.1.9",
        "@types/uuid": "^8.3.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "prettier": "^2.3.0",
        "typescript": "^4.2.4"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run dev:pre-commit"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,json,md,css}": "prettier --write",
        "src/**/*.{ts,tsx}": "eslint --fix"
    }
}
